# Application Configuration
APP_NAME="CloudStoreVN"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging Configuration
# Available channels: stack, single, daily, slack, syslog, errorlog, monolog, custom
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=tenmien
DB_USERNAME=root
DB_PASSWORD=

# Broadcasting, Cache, Queue, and Session Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Session Configuration
# Available drivers: file, cookie, database, apc, memcached, redis, dynamodb, array
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# CardVip Payment Gateway Configuration
# URL: API endpoint for CardVip payment gateway
# API_KEY: Your CardVip API key for authentication
# CALLBACK_URL: URL where CardVip will send payment callbacks
CARDVIP_URL=https://api.cardvip.vn
CARDVIP_API_KEY=your_cardvip_api_key_here
CARDVIP_CALLBACK_URL=http://localhost/callback

# Telegram Bot Configuration
# BOT_TOKEN: Your Telegram bot token from @BotFather
# ADMIN_CHAT_ID: Telegram chat ID where admin notifications will be sent
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here
